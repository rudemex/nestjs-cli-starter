{
  "name": "nestjs-cli-starter",
  "version": "1.0.0",
  "description": "NestJS CLI Starter",
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudemex/nestjs-cli-starter.git"
  },
  "bugs": {
    "url": "https://github.com/rudemex/nestjs-cli-starter/issues"
  },
  "homepage": "https://github.com/rudemex/nestjs-cli-starter#readme",
  "private": true,
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "bin": {
    "nestjs-cli-starter": "dist/main.js"
  },
  "scripts": {
    "clean": "rimraf coverage dist node_modules junit.xml test-report.xml yarn.lock package-lock.json",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=build nest build",
    "build:local": "cross-env NODE_ENV=dev nest build",
    "postbuild": "yarn chmod",
    "postbuild:local": "yarn chmod && yarn link",
    "chmod": "chmod +x dist/main.js",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "lint:check": "eslint '{src,apps,libs,test}/**/*.ts'",
    "format": "prettier --write '{src,apps,libs,test,fixtures}/**/*.{ts,js,json,json5,jsonc,yml,yaml,md}'",
    "format:check": "prettier --check '{src,apps,libs,test,fixtures}/**/*.{ts,js,json,json5,jsonc,yml,yaml,md}'",
    "lint:format:check": "yarn lint:check && yarn format:check",
    "pre-commit": "lint-staged",
    "test": "jest --runInBand --forceExit --coverage",
    "test:husky": "jest --runInBand --forceExit --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "release": "standard-version",
    "prepare": "husky",
    "unlink": "yarn unlink"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,json5,jsonc,yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@tresdoce-nestjs-toolkit/http-client": "^2.0.9",
    "chalk": "^5.6.0",
    "cli-table3": "^0.6.5",
    "configstore": "^7.0.0",
    "inquirer": "^12.9.3",
    "nest-commander": "^3.19.0",
    "ora": "^9.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "update-notifier": "^7.3.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@tresdoce-nestjs-toolkit/commons": "^1.4.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "nest-commander-schematics": "^3.2.0",
    "nest-commander-testing": "^3.5.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
